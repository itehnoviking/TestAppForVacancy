@model OrderListViewModel

<form asp-controller="Order" asp-action="OrderFilter" asp-antiforgery="true" method="post">
    <div class="form-group">
        <label asp-for="FirstDate"></label>
        <input asp-for="FirstDate" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SecondDate"></label>
        <input asp-for="SecondDate" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Numbers"></label>
        <select asp-for="Numbers" class="form-control" multiple>
            @foreach (var order in @Model.Orders)
            {
                <option value="@order.Number">@order.Number</option>
            }
            
            
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Providers"></label>
        <select asp-for="Providers" class="form-control" multiple>
            @foreach (var provider in @Model.Providers)
            {
                <option value="@provider">@provider</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>



<table>
    <tr>
        <th>Id</th>
        <th>Number</th>
        <th>Date</th>
        <th>ProviderId</th>
        <th></th>
    </tr>

    @foreach (var item in @Model.Orders)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProviderId)
            </td>
            <td>
                <article-buttons-block>
                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Detail</a>
                    <a class="btn btn-warning" asp-controller="Order" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger" asp-controller="Order" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </article-buttons-block>
            </td>
        </tr>
    }
</table>

<div class="shadowbox">
    <a asp-controller="Order" asp-action="Create" class="btn btn-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus-fill" viewBox="0 0 16 16">
