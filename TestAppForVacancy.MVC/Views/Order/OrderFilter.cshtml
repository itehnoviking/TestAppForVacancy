@model IList<OrderViewModel>


<table>
    <tr>
        <th>Id</th>
        <th>Number</th>
        <th>Date</th>
        <th>ProviderId</th>
        <th></th>
    </tr>

    @foreach (var item in @Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProviderId)
            </td>
            <td>
                <article-buttons-block>
                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Detail</a>
                    <a class="btn btn-warning" asp-controller="Order" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger" asp-controller="Order" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </article-buttons-block>
            </td>
        </tr>
    }
</table>
