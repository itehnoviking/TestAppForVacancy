@model OrderDeleteViewModel

<div class="container">
    <p class="lead">
        Are you sure that you want delete article "@Model.Number" (@Model.Date)
    </p>

    <form asp-controller="Order" asp-action="Delete" method="post">
        <input asp-for="Id" type="hidden" />
        <a asp-action="Index" asp-controller="Order" class="btn btn-primary">Cancel</a>
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>
</div>
